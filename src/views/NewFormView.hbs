{{> Header }}

<style>
    #horizontal-form>div {
        display: flex;
        flex-direction: column;
        align-items: center;

        gap: 0.5em;
    }
</style>

<link rel="stylesheet" href="{{ styles 'form.css' }}">

<form id="new-lesson-form" method="post" action="{{ path 'lessons' }}">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="title" maxlength="100" required>
    </div>
    <div id="horizontal-form"
        style="display: flex; flex-direction: row; justify-content: space-evenly; align-items: center;">
        <div>
            <label for="difficulty">Difficulty (1-5)</label>
            <input type="number" id="difficulty" name="difficulty" min="1" max="5" step="1" required>
        </div>
        <div>
            <label for="type">Type</label>
            <select id="type" name="type" required>
                <option value="send">Send</option>
                <option value="receive">Receive</option>
            </select>
        </div>
    </div>
    <div>
        <label for="message">Message</label>
        <textarea id="message" name="message" maxlength="500" required></textarea>
    </div>
    <div>
        <label for="text">Text</label>
        <input type="text" id="text" name="text" maxlength="255" pattern="[\w,.!?&quot;&apos;\(\) ]+" title="Accepted: a-z A-Z 0-9 , . ! ? \" ' ( )" required>
    </div>

    <input type="submit" value="Create" id="new-lesson-form-submit-button">
</form>

{{> Footer }}